 class Video
    {
        public string Title { get; set; }
        public string Creator { get; set; }
        public int Duration { get; set; } // Duration in seconds
        private List<Comment> Comments { get; set; }

        public Video(string title, string creator, int duration)
        {
            Title = title;
            Creator = creator;
            Duration = duration;
            Comments = new List<Comment>();
        }

        public void AddComment(Comment comment)
        {
            Comments.Add(comment);
        }

        public int CommentCount()
        {
            return Comments.Count;
        }

        public void ShowDetails()
        {
            Console.WriteLine($"Title: {Title}\nCreator: {Creator}\nDuration: {Duration} seconds\nTotal Comments: {CommentCount()}");
            foreach (var comment in Comments)
            {
                Console.WriteLine($"- {comment.Name}: {comment.Message}");
            }
            Console.WriteLine("====================================");
        }
    }